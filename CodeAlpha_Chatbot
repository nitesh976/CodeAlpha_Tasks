def chatbot():
  while True:
    user_input= input("You: ").lower()
    
    if user_input=="hello":
      print("Bot: hi!")
    elif user_input=="how are you":
      print("Bot: I am fine,thanks!")
    elif user_input=="bye":
      print("Bot: Goodbye!")
      break
    else:
      print("Bot: I don't Understand")
      
chatbot()
