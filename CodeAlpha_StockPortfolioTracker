stock_prices={
  "APPL":180,
  "TSLA":250,
  "GOOGL":2700,
  "MSFT":300
}
total_investment=0

while True:
  stock_name= input("Enter stock name (or 'done' to finish): ").upper()
  if stock_name=="DONE":
    break
  if stock_name in stock_prices:
    quantity= int(input("Enter quantity: "))
    total_investment += stock_prices[stock_name]*quantity
  else:
    print('stock not found')

print("total_investment value: $",total_investment)
